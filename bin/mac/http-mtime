PATH=/bin:/usr/bin

usage() {
    echo "usage: `basename "$0"` [-h] [file ...]" 1>&2
    exit $1
}

opt=
while getopts 'h' opt; do
    case $opt in
    h)      usage 0 ;;
    \?)     usage 1 ;;
    esac
done
shift `expr $OPTIND - 1`

[ $# = 0 ] && usage 0

LANG=C
for i; do
    date -j -u -r `stat -f %-m "$i"` '+%a, %d %b %Y %T GMT'
done
